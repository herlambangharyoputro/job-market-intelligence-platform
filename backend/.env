# Application Settings
APP_NAME=Job Market Intelligence Platform API
APP_VERSION=1.0.0
DEBUG=True

# Database MySQL Configuration
DATABASE_URL=mysql+pymysql://root@localhost:3306/job_market_intelligence_platform

# HAPUS atau COMMENT baris di bawah ini:
# DB_USER=root
# DB_PASSWORD=
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=job_market_intelligence_platform

# API Settings
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security
SECRET_KEY=dev-secret-key-change-this-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# NLP Settings
MAX_TEXT_LENGTH=10000
DEFAULT_LANGUAGE=id
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_SKILL_EXTRACTION=True

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100